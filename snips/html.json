{
	// Place your snippets for html here. Each snippet is defined under a snippet name and has a prefix, body and 
	// description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
	// $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the 
	// same ids are connected.
	// Example:
	// "Print to console": {
	// 	"prefix": "log",
	// 	"body": [
	// 		"console.log('$1');",
	// 		"$2"
	// 	],
	// 	"description": "Log output to console"
	// }
	"Mat Card": {
		"prefix": "card",
		"body": [
			"<mat-card>",
			"<mat-card-header>",
			"<mat-card-title>",
			"$1",
			"</mat-card-title>",
			"</mat-card-header>",
			"<mat-card-content>",
			"$2",
			"</mat-card-content>",
			"<mat-card-actions>",
			"</mat-card-actions>",
			"</mat-card>",
		],
		"description": "Angular Mat Card with Header, Footer, and Buttons"
	},
	"Mat Grid + List": {
		"prefix": "grid",
		"body": [
			"<!-- rowHeight='width:height' -->",
			"<mat-grid-list cols='2' rowHeight='2:1'>",
			"<mat-grid-tile>Grid 1$1</mat-grid-tile>",
			"<mat-grid-tile>Grid 2$2</mat-grid-tile>",
			"<mat-grid-tile>Grid 3$3</mat-grid-tile>",
			"<mat-grid-tile>Grid 4$4</mat-grid-tile>",
			"</mat-grid-list>"
		],
		"description": "Angular Grid List."
	},

	"Mat List": {
		"prefix": "list",
		"body": [
			"<mat-list role='list'>",
			"<mat-list-item role='listitem'>Item 1$1</mat-list-item>",
			"<mat-list-item role='listitem'>Item 2$2</mat-list-item>",
  "<mat-list-item role='listitem'>Item 3$3</mat-list-item>",
"</mat-list>"
		]
	},
	
}